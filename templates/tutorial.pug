extends layout

block title
  title= active

block content
  .content.page-api.cf
    p.dep-warn This tutorial and all other tutorials in this section are for hapi v16 and <strong>will not work</strong> under v17 unless explicitly marked <em>compatible with v17</em>. We are in the process of updating all tutorials on the site to work with the <strong><a href="https://github.com/hapijs/hapi/issues/3658">major v17 API&nbsp;changes</a></strong>, please <a href="https://github.com/hapijs/hapijs.com/issues">help us out</a> if you can!
    .column.api-description
      .reference!= html

    .column.nav-secondary
      .tag-list.cf
        p.pull-left Languages:
        .tag-list-toggle.pull-right= language
          ul.unstyled.tag-list-picker
            each lang in languages
              if lang !== language
                li
                  a(href=`/tutorials?lang=${lang}`)= lang
      nav
        h3 Tutorials

        ul
          each tutorial in tutorials
            li
              a(href=`/tutorials/${tutorial.slug}?lang=${language}`, class=(tutorial.title === active ? 'active' : '')) #{tutorial.title}
